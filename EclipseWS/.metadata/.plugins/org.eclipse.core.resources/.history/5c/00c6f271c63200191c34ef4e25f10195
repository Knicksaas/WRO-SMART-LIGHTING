package ch.nte.wro.motion;

import ch.nte.wro.sensors.LightIntensitySensorChecker;
import ch.nte.wro.status.GlobalSensors;
import ch.nte.wro.status.RoboData;
import lejos.robotics.RegulatedMotor;

public class AdjustWithLine {
	
	private RegulatedMotor mLeft;
	private RegulatedMotor mRight;
	private float worth1;
	private float worth2;
	
	
	public AdjustWithLine(RegulatedMotor mLeft, RegulatedMotor mRight) {
		this.mLeft = mLeft;
		this.mRight = mRight;
		adjust();
	}
	
	private void adjust() {
		LightIntensitySensorChecker l1 = new LightIntensitySensorChecker(GlobalSensors.colorSensorLeft);
		LightIntensitySensorChecker l2 = new LightIntensitySensorChecker(GlobalSensors.colorSensorRight);
		
		l1.checkSensor();
		l2.checkSensor();
		
		worth1 = l1.getIntensity();
		worth2 = l2.getIntensity();
		
		mLeft.setSpeed(50);
		mRight.setSpeed(50);
		
		if(RoboData.invertMotorDirection) {
			mLeft.forward();
			mRight.forward();
		} else {
			mLeft.backward();
			mRight.backward();
		}
		
	}

}
